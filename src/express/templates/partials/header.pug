- const hasUser = Boolean(user);
header.header
  div(class=`header__wrapper ${hasUser ? 'header--logged' : ''}`)
    a.header__logo.logo(href="/")
      img(src="/img/logo.svg" width="179" height="34" alt="Логотип Куплю Продам")
    nav.header__user-menu
      ul.header__list
        li.header__item
          a(href="/") Публикации
        li.header__item
          a(href="/my/comments") Комментарии
    form.search(method="get" action="/search" autocomplete="off")
      input(value=`${searchValue || ``}` type="search" name="search" placeholder="Поиск" aria-label="Поиск")
      div.search__icon
      div.search__close-btn
    a.header__avatar.avatar(href="#")
      if hasUser
        img(src=`/img/${user.avatar}` alt="Аватар пользователя")
    a.header__input(href="/register") Вход и регистрация
