mixin ticketCard(offer = {}, idx = 0, isMyOffer = false)
  - const OFFER_NUMBER_INCREMENT_COUNT = 1;
  - const offerNumber = idx + OFFER_NUMBER_INCREMENT_COUNT;
  div(class=`ticket-card ticket-card--color0${offerNumber}`)
    div.ticket-card__img
      img(src=`/img/${offer.picture}` alt=offer.title)
    div.ticket-card__info
      +ticketLabel(offer.type)
      div.ticket-card__categories
        a(href="#") #{offer.category}
      div.ticket-card__header
        h3.ticket-card__title
          a(href=`/offers/${offer.id}`) #{offer.title}
        p.ticket-card__price
          span.js-sum #{offer.sum}
          |  ₽
      if !isMyOffer
        div.ticket-card__desc
          p #{offer.description}
    if isMyOffer
      button.ticket-card__del.js-delete(type="button") Удалить
